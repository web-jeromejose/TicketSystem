@{
    ViewData["Title"] = "All Clients";
}
@using TicketSystem.ViewModel
@using System.Collections.Generic
@model IEnumerable<ClientDetails>

<a asp-action="Add">Add Client</a>

@foreach (var client in Model)
{
    <div class="row">
        <div class="col s12 m6">
            <div class="card grey darken-1 stickey-action hoverable">
                <div class="card-content white-text activator">
                    <span class="card-title">@client.Client.FirstName @client.Client.LastName</span>
                    <p>@client.Client.Company</p><br>
                    <p>Open Tickets: @client.OpenTicketCount</p>
                </div>
                <div class="card-action">
                    <a asp-action="AddTicket" asp-route-id="@client.Client.Id">Add Ticket</a>
                    <a asp-action="Open" asp-route-id="@client.Client.Id">Open</a>
                </div>
            </div>
        </div>
    </div>
}